{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reminder list</h1>

    <table class="records_list table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Arrivaldate</th>
                <th>Leeway</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reminder_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.arrivalDate %}{{ entity.arrivalDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.leeway }}</td>
                <td>
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn dropdown-toggle btn-info">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('reminder_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> show</a>
                            </li>
                            <li>
                                <a href="{{ path('reminder_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-info btn-large" href="{{ path('reminder_new') }}">
                <i class="icon-pencil icon-white"></i> Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
