{% extends '::base.html.twig' %}

{% block stylesheets %}
        <link href="{{ asset('/web/assets/css/datepicker.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('/web/assets/less/datepicker.less') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('/web/assets/css/slider.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('/web/assets/less/slider.less') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block body -%}
    <h1>Reminder edit</h1>

    <form action="{{ path('reminder_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <!-- {{ form_widget(edit_form) }} -->
<!-- Static part -->
        <!-- For Arrivaldate -->
        <div class="new-div">
            <label>Arrival date</label>
            <div class="input-append date" id="dp3" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                <input class="span2" size="16" type="text" value="12-02-2012">
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
            <div class="input-append">
                <input class="span2" id="appendedInput" type="text">
                <span class="add-on">h</span>
                <input class="span2 input-min" id="appendedInput" type="text">
                <span class="add-on">min</span>
            </div>
        </div>
        <!-- For Leeway -->
        <div class="new-div">
            <label>Leeway</label>
            <div class="slider slider-horizontal" style="width: 140px;">
                <input type="text" id="sl1" value="10" class="span2" style="">
            </div>
        </div>

        <div class="new-div">
            <label class="required" for="lpdw_trainspovingbundle_remindertype_rfid">Rfid</label>
            <select required="required" name="lpdw_trainspovingbundle_remindertype[rfid]" id="lpdw_trainspovingbundle_remindertype_rfid">
                <option selected="selected" disabled="disabled" value="">none</option>
                <option value="1">1</option>
            </select>
        </div>
        
<!-- END Static part -->

        <p class="new-div">
            <button class="btn btn-info btn-large edit-btn-edit" type="submit"><i class="icon-edit icon-white"></i> Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <form action="{{ path('reminder_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-info btn-large edit-btn-delete" type="submit"><i class="icon-remove icon-white"></i> Delete</button>
            </form>
        </li>
    </ul>
    <ul class="record_actions pager">
        <li class="previous">
            <a href="{{ path('reminder') }}">
                ‚Üê Back to the list
            </a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/web/assets/js/bootstrap-datepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/web/assets/js/bootstrap-slider.js') }}"></script>
    <script>
        $(function(){
            window.prettyPrint && prettyPrint()
            $('#dp3').datepicker();
        });
    </script>
    <script>
        $(function(){
            window.prettyPrint && prettyPrint();
            $('#sl1').slider();            
        });
    </script>
{% endblock %}