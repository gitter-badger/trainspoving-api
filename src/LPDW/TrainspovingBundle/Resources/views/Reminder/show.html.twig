{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reminder</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Arrivaldate</th>
                <td>{{ entity.arrivalDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Leeway</th>
                <td>{{ entity.leeway }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reminder') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reminder_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('reminder_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
